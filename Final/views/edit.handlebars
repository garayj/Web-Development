<h1>Edit Your Workout!</h1>
    <legend>Make changes to your exercise</legend>
    <label for="name">Exercise Name: </label><input type="text" name="name" id="changeName" value='{{name}}'>
    <label for="reps">Reps:</label><input type="number" name="reps" id="changeReps" value="{{reps}}">
    <label for="weight">Weight: </label><input type="number" name="weight" id="changeWeight" value="{{weight}}">
    <label for="date">Date: </label><input type="date" name="date" value = "{{date}}" id="changeDate">
    <select name="unit" id="lbs">
      {{#if lbs}}
      <option value="1">lb</option>
      <option value="0">kg</option>
      {{else}}
      <option value="0">kg</option>
      <option value="1">lb</option>
      {{/if}}
    </select>
    <input id="id" type="hidden" name="Change" value="{{id}}">
  <a href="/"><button id="changeMe" >Change</button></a>
 <a href="http://localhost:3000/"><button>Go</button></a> 